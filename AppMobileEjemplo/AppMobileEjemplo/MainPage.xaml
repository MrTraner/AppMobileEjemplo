<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobileEjemplo.MainPage">

    <ScrollView>
        <StackLayout>
            <Entry x:Name="txtCorreo" Placeholder="Correo" PlaceholderColor="LightGray" />
            <Entry x:Name="txtContraseña" Placeholder="Contraseña" PlaceholderColor="LightGray" IsPassword="True" />
            <Button x:Name="btnIniciar" Text="Iniciar" BackgroundColor="#2f73e4" BorderRadius="20" TextColor="White" />
        </StackLayout>
    </ScrollView>

</ContentPage>
